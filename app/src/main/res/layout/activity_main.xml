<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rpraczyk.kittenapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world_text"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/textView" />

    <ImageView
        android:id="@+id/kitten_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/lovely_kitten"
        android:contentDescription="@string/kitten_content_description" />
    <Button
        android:id="@+id/kitten_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kitten_image"
        android:layout_margin="3dp"
        android:text="@string/button_text"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/lifecycle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kitten_button"
        android:text="@string/lifecycle_button_text"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
